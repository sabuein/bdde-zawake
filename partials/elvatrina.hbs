<!-- elvatrina.hbs -->
<header class="shelf-title"><h2 title="{{t heading}}"><span class="right arrows" title="{{t "Go right"}}">&rightarrow;</span>{{t heading}}<span class="left arrows" title="{{t "Go left"}}">&leftarrow;</span></h2></header>
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="shelf-content flex row nowrap align-content-center justify-content-start align-items-center">
    {{#foreach post}}
    <article class="shelf-item" title="{{title}}">
        <figure class="item-figure"><a href="{{img_url feature_image}}" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></a></figure>
        <header class="item-title"><h3><a href="{{url}}" title="{{title}}">{{title}}</a></h3></header>
        <div class="item-cta">{{> "item-button" item_price=tags.[1].slug}}</div>
        {{#if custom_excerpt}}<p class="item-text">{{custom_excerpt}}</p>{{/if}}
    </article>
    {{/foreach}}
</article>
{{else}}<p class="empty-shelves">{{#if error}}{{error}}{{/if}}{{t "Sorry, there are no products in this collection"}}</p>
{{/get}}