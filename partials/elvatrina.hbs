<!-- elvatrina.hbs -->
{{#get "posts" include="tags,authors" as |post|}}
{{#foreach post}}
<article class="shelf-item">
    <figure class="item-figure"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" /></figure>
    <h2 class="item-title"><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
    <div class="item-cta">{{> "item-button" item_price=tags.[1].slug}}</div>
    {{#if custom_excerpt}}<p class="item-text">{{custom_excerpt}}</p>{{/if}}
</article>
{{/foreach}}
{{else}}
<p class="empty-shelves">{{#if error}}{{error}}{{/if}}{{t "Sorry, there are no products in this collection"}}</p>
{{/get}}