{{!< default}}
<!-- home.hbs -->
{{#is "home"}}
<main class="{{post_class}}">
    <header>{{name}}</header>
    {{#get "posts" include="tags,authors" as |post|}}
    <section>
        {{#foreach post}}
        <article>
            <figure><img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></figure>
            <h2><a href="{{url}}">{{title}}</a></h2>
            {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{/if}}
            <div>{{> "item-button" item_price=tags.[1].slug}}</div>
        </article>
        {{/foreach}}
    </section>
    {{else}}
    <p class="error">{{error}}</p>
    {{/get}}
    <footer>
        {{#if comments}}
        <section>{{comments}}</section>
        {{/if}}
    </footer>
</main>
